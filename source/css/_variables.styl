// Colors
color-default = #444
color-grey = #888
color-border = #aaa
color-link = #258fb8
color-background = #eee
color-sidebar-text = #777
color-main-nav-link = #727272
color-main-nav-link-hover = #d5d5d5
color-main-nav-link-active = #b1b1b1
color-widget-text = #13bdff
color-widget-background = #fafafa
color-widget-border = #ccc
color-footer-background = #262a30
color-mobile-nav-background = #191919
color-mobile-nav-border = #2b2b2b
color-weibo = #eb192d
color-weixin = #38ad5a
color-qq = #39B2E2
color-renren = #105BA3
color-more = #333
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39
color-linkedin = #0d78b7

// Fonts
font-sans = "Helvetica Neue", "Helvetica", "Hiragino Sans GB", "Microsoft YaHei", "Source Han Sans CN", "WenQuanYi Micro Hei", Arial, sans-serif
font-serif = "Droid Serif", Georgia, Serif
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace
font-icon = FontAwesome
font-icon-path = "//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/fonts/fontawesome-webfont"
font-icon-version = "4.2.0"
font-size = 14px
line-height = 1.6em
line-height-title = 1.1em

// Header
blog-title-size = 2em
banner-height = 300px
banner-url = "http://oiq00n80p.bkt.clouddn.com/hankliu62-blog-bg.jpg"

sidebar = hexo-config("sidebar")

// Layout
block-margin = 50px
article-padding = 20px
mobile-nav-width = 250px
main-column = 9
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"
